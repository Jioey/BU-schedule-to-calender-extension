{
    "name": "BU Schedule Downloader",
    "version": "0.1.0",
    "description": "Converts BU class schedule to ics file for Google Calender",
    "permissions": ["tabs"],
    "host_permissions": ["https://*.bu.edu/*"],
    "content_scripts": [
      {
        "matches": ["https://*.bu.edu/*"],
        "js": [
            "contentScript.js",
            "node_modules/ics-js/dist/ics-js.js"
         ]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "./assets/bookmark.png",
          "./assets/play.png",
          "./assets/delete.png",
          "./assets/download.png",
          "./assets/save.png"
        ],
        "matches": ["https://*.bu.edu/*"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "assets/ext-icon.png",
        "24": "assets/ext-icon.png",
        "32": "assets/ext-icon.png"
      },
      "default_title": "BU Schedule Downloader",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
}
